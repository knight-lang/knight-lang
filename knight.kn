		: + next_function_ret '$'
		: IF | (? next_function_ret 'B')
		     | (? next_function_ret 'E')
		     | (? next_function_ret 'C')
		     | (? next_function_ret '`')
		     | (? next_function_ret 'Q')
		     | (? next_function_ret '!')
		     | (? next_function_ret 'L')
		     | (? next_function_ret 'D')
		       (? next_function_ret 'O')
