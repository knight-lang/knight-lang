			       (? next_function_ret '|')
				: ++++ next_function_ret (CALL next_ast) '$' (CALL next_ast) '$'
				: IF | (? next_function_ret 'I')
				       (? next_function_ret 'G')
					: ++++++ next_function_ret (CALL next_ast) '$' (CALL next_ast) '$' (CALL next_ast) '$'
					: IF (? next_function_ret 'S')
